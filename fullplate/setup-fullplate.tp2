    PATCH_IF (resmissile_tot > 99 && (resmissile_tot - resmissile_arm < 100)) BEGIN WRITE_BYTE 0x63 (nat_resmissile - (resmissile_tot - 100)) END
    PATCH_IF (resmissile_tot > 90 && (resmissile_tot - resmissile_arm < 91)) BEGIN WRITE_BYTE 0x63 (nat_resmissile - (resmissile_tot - 100)) END

