      END ELSE BEGIN
        READ_BYTE 0x33 effver2
        READ_SBYTE 0x59 nat_resfire
        READ_SBYTE 0x5a nat_rescold
        READ_SBYTE 0x60 nat_resslash
        READ_SBYTE 0x61 nat_rescrush
        READ_SBYTE 0x62 nat_respierce
