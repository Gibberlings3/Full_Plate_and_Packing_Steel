      END
      PATCH_IF (respierce_arm != 0 && nat_respierce != 0) BEGIN
         SET opcode = 88
         SET param1 = %nat_respierce%
         SET param2 = 0
         PATCH_IF (effver2 = 1) BEGIN PATCH_INCLUDE ~addcreeff2.tpp~ END
         ELSE BEGIN PATCH_INCLUDE ~addcreeff1.tpp~ END
      END
