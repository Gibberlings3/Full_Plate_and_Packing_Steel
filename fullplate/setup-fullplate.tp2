        PATCH_IF (~%modsiam%~ STRING_CONTAINS_REGEXP ~item_rev~ == 0) && (~%name%~ STRING_EQUAL ~u#leat01~) BEGIN SPRINT _spellfailmod ~-10~ END
        PATCH_IF (~%modsiam%~ STRING_CONTAINS_REGEXP ~item_rev~ == 0) && (~%name%~ STRING_EQUAL ~u#leat02~) BEGIN SPRINT _spellfailmod ~-11~ END

        // if multiple matches, latest wins
        PATCH_IF ( ~%game%~ STRING_EQUAL ~all~ || ~%game%~ STRING_EQUAL ~%gameiam%~ || (~%modsiam%~ STRING_CONTAINS_REGEXP ~%game%~ == 0) ) BEGIN
