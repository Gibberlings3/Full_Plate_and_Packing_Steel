                    PATCH_INCLUDE ~sumfx.tpp~
                    PATCH_IF (returnval != 0 && returnval != 100 && itemtype != 0x02) BEGIN resslash_itm += returnval END
                    PATCH_IF (returnval != 0 && returnval != 100 && itemtype = 0x02) BEGIN resslash_arm += returnval END

