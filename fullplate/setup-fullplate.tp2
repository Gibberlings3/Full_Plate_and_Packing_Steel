    PATCH_IF (respierce_tot > 99 && (respierce_tot - respierce_arm < 100)) BEGIN WRITE_BYTE 0x62 (nat_respierce - (respierce_tot - 99)) END
    PATCH_IF (respierce_tot > 90 && (respierce_tot - respierce_arm < 91)) BEGIN WRITE_BYTE 0x62 (nat_respierce - (respierce_tot - 90)) END

