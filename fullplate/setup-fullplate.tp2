          SET valid = 0
          FOR (y=0; y < 18 ; y+=1) BEGIN
            READ_SHORT islots_offset + (2 * %y%)       itmnum
            PATCH_IF itmnum = x BEGIN
              SET valid = 1
            END
          END

          // yes.
          PATCH_IF (valid = 1) BEGIN

            INNER_ACTION BEGIN
              SILENT
              ACTION_IF FILE_EXISTS_IN_GAME ~%resref%.itm~ BEGIN
                COPY_EXISTING ~%resref%.itm~ ~override~

                    READ_BYTE 0x1c itemtype

                    // start scanning
                    SET intparam = 1

                    // itemtype = 0x02 catches everything we adjust but the girdles ... good enough

                    SET intopcode = 30
                    PATCH_INCLUDE ~sumfx.tpp~
                    PATCH_IF (returnval != 0 && returnval != 100 && itemtype != 0x02) BEGIN resfire_itm += returnval END
                    PATCH_IF (returnval != 0 && returnval != 100 && itemtype = 0x02) BEGIN resfire_arm += returnval END

                    SET intopcode = 28
                    PATCH_INCLUDE ~sumfx.tpp~
                    PATCH_IF (returnval != 0 && returnval != 100 && itemtype != 0x02) BEGIN rescold_itm += returnval END
                    PATCH_IF (returnval != 0 && returnval != 100 && itemtype = 0x02) BEGIN rescold_arm += returnval END

