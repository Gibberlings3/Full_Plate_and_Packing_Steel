        PATCH_INCLUDE ~sumcrefx1.tpp~
        PATCH_IF (returnval != 0) BEGIN rescrush_eff += returnval END

        SET intopcode = 88
        PATCH_INCLUDE ~sumcrefx1.tpp~
        PATCH_IF (returnval != 0) BEGIN respierce_eff += returnval END

