        PATCH_INCLUDE ~sumcrefx1.tpp~
        PATCH_IF (returnval != 0) BEGIN resfire_eff += returnval END

        SET intopcode = 28
        PATCH_INCLUDE ~sumcrefx1.tpp~
        PATCH_IF (returnval != 0) BEGIN rescold_eff += returnval END

        SET intopcode = 86
        PATCH_INCLUDE ~sumcrefx1.tpp~
        PATCH_IF (returnval != 0) BEGIN resslash_eff += returnval END

