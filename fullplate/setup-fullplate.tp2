                    PATCH_INCLUDE ~sumfx.tpp~
                    PATCH_IF (returnval != 0 && returnval != 100 && itemtype != 0x02) BEGIN rescrush_itm += returnval END
                    PATCH_IF (returnval != 0 && returnval != 100 && itemtype = 0x02) BEGIN rescrush_arm += returnval END

