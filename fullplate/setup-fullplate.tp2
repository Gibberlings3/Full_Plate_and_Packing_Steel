    // resistances added by items (what we're really interested in)
    PATCH_IF (itm_count > 0) BEGIN

        FOR (x=0; (x < %itm_count%); x+=1) BEGIN
          READ_ASCII %itm_offset% + 0x14 * %x%     resref (8) NULL

