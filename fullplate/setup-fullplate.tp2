        READ_LONG 0x310 spellslots_offset
        READ_LONG 0x318 memspells_offset
        READ_LONG 0x320 islots_offset
        READ_LONG 0x324 itm_offset
        READ_LONG 0x328 itm_count
        READ_LONG 0x32c eff_offset
        READ_LONG 0x330 eff_count
