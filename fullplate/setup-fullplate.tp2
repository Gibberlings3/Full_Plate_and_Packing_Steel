 DESIGNATED 204

COPY_EXISTING ~backstab.2da~ ~override/backstab.2da~
  COUNT_2DA_COLS cols
  SET_2DA_ENTRY 1 1 10 ~2~
  FOR (x=2; (x < %cols%); x+=1) BEGIN
    READ_2DA_ENTRY 1 %x% 10 entry
    SET entry = entry + 1
    SET_2DA_ENTRY 1 %x% 10 ~%entry%~
  END
  BUT_ONLY_IF_IT_CHANGES

