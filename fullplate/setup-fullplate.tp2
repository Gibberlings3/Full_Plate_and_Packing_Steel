    // the object of the exercise: adjust resistances if necessary
    PATCH_IF (resfire_tot > 100 && (resfire_tot - resfire_arm < 101)) BEGIN WRITE_BYTE 0x59 (nat_resfire - (resfire_tot - 100)) END
    PATCH_IF (resfire_tot > 99 && (resfire_tot - resfire_arm < 100)) BEGIN WRITE_BYTE 0x59 (nat_resfire - (resfire_tot - 99)) END
    PATCH_IF (resfire_tot > 90 && (resfire_tot - resfire_arm < 91)) BEGIN WRITE_BYTE 0x59 (nat_resfire - (resfire_tot - 90)) END

    PATCH_IF (rescold_tot > 100 && (rescold_tot - rescold_arm < 101)) BEGIN WRITE_BYTE 0x5a (nat_rescold - (rescold_tot - 100)) END
    PATCH_IF (rescold_tot > 99 && (rescold_tot - rescold_arm < 100)) BEGIN WRITE_BYTE 0x5a (nat_rescold - (rescold_tot - 99)) END
    PATCH_IF (rescold_tot > 90 && (rescold_tot - rescold_arm < 91)) BEGIN WRITE_BYTE 0x5a (nat_rescold - (rescold_tot - 90)) END

