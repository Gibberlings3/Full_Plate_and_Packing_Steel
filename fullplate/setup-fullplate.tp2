PRINT ~Modifying fatigue rules...~

// move fatigue effects from starting at 7 to starting at 6
COPY_EXISTING ~fatigmod.2da~ ~override~
  COUNT_2DA_ROWS 2 ~entrycount~
  FOR (i=0;i<~%entrycount%~;i=i+1) BEGIN
    READ_2DA_ENTRY ~%i%~ 0 2 ~fatigue~
    READ_2DA_ENTRY ~%i%~ 1 2 ~luckmod~
    
    PATCH_IF NOT (~%fatigue%~ STRING_EQUAL ~2DA~) BEGIN
      PATCH_IF (fatigue > 5) BEGIN
        SET luckmod = %luckmod% - 1
        SET_2DA_ENTRY ~%i%~ 1 2 ~%luckmod%~
      END
    END
  END
  BUT_ONLY_IF_IT_CHANGES

// increase CON effects on fatigue progression
//  (except IWD/HOW/TOTLM, no fatigue modifier field in the 2DA)
COPY_EXISTING ~hpconbon.2da~ ~override~
  COUNT_2DA_ROWS 6 ~entrycount~
  FOR (i=0;i<~%entrycount%~;i=i+1) BEGIN
    READ_2DA_ENTRY ~%i%~ 0 6 ~con~
    READ_2DA_ENTRY ~%i%~ 5 6 ~confatmod~
    
    PATCH_IF NOT (~%con%~ STRING_EQUAL ~2DA~) BEGIN
      PATCH_IF (con < 10) BEGIN
        SET confatmod = %confatmod% - 1
        SET_2DA_ENTRY ~%i%~ 5 6 ~%confatmod%~
      END
      PATCH_IF (con > 13) BEGIN
        SET confatmod = %confatmod% + 1
        SET_2DA_ENTRY ~%i%~ 5 6 ~%confatmod%~
      END
    END
  END
  BUT_ONLY_IF_IT_CHANGES

// BG2: thieves & DEX < 9
ACTION_IF (~%gameiam%~ STRING_EQUAL ~tob~ || ~%gameiam%~ STRING_EQUAL ~soa~) BEGIN
  COPY_EXISTING ~skilldex.2da~ ~override~
    COUNT_2DA_ROWS 8 ~entrycount~
    PATCH_IF (entrycount = 17) BEGIN
      PATCH_PRINT ~Extending thief skill Dex modifier table for Dex < 9 (fixpack-compatible)...~
      READ_2DA_ENTRY 0 0 8 ~tempdex~
      READ_2DA_ENTRY 0 1 8 ~temppickpocket~
      READ_2DA_ENTRY 0 2 8 ~tempopenlocks~
      READ_2DA_ENTRY 0 3 8 ~tempfindtraps~
      READ_2DA_ENTRY 0 4 8 ~tempmovesil~
      READ_2DA_ENTRY 0 5 8 ~temphide~
      READ_2DA_ENTRY 0 6 8 ~tempdetill~
      READ_2DA_ENTRY 0 7 8 ~tempsettraps~
      WHILE (tempdex > 1) BEGIN
        SET tempdex = tempdex - 1
        INSERT_2DA_ROW 0 8 ~%tempdex%           %temppickpocket%             %tempopenlocks%             %tempfindtraps%             %tempmovesil%                  %temphide%                %tempdetill%              %tempsettraps%~
      END
    END
  BUT_ONLY_IF_IT_CHANGES
END
// IWD: thieves & DEX < 9
ACTION_IF (~%gameiam%~ STRING_EQUAL ~iwd~ || ~%gameiam%~ STRING_EQUAL ~how~ || ~%gameiam%~ STRING_EQUAL ~totlm~) BEGIN
  COPY_EXISTING ~skilldex.2da~ ~override~
    COUNT_2DA_ROWS 5 ~entrycount~
    PATCH_IF (entrycount = 17) BEGIN
      PATCH_PRINT ~Extending thief skill Dex modifier table for Dex < 9...~
      READ_2DA_ENTRY 0 0 5 ~tempdex~
      READ_2DA_ENTRY 0 1 5 ~temppickpocket~
      READ_2DA_ENTRY 0 2 5 ~tempopenlocks~
      READ_2DA_ENTRY 0 3 5 ~tempfindtraps~
      READ_2DA_ENTRY 0 4 5 ~tempstealth~
      WHILE (tempdex > 1) BEGIN
