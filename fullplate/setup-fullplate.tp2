      END
      PATCH_IF (rescrush_arm != 0 && nat_rescrush != 0) BEGIN
         SET opcode = 87
         SET param1 = %nat_rescrush%
         SET param2 = 0
         PATCH_IF (effver2 = 1) BEGIN PATCH_INCLUDE ~addcreeff2.tpp~ END
