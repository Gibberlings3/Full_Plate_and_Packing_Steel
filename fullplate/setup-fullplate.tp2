         SET opcode = 89
         SET param1 = %nat_resmissile%
         SET param2 = 0
         PATCH_IF (effver2 = 1) BEGIN PATCH_INCLUDE ~addcreeff2.tpp~ END
         ELSE BEGIN PATCH_INCLUDE ~addcreeff1.tpp~ END
      END
      // all effects added
      SET efflength = 0x30
      PATCH_IF (effver2 = 1) BEGIN SET efflength = 0x108 END

      PATCH_IF (~%creversion%~ STRING_EQUAL ~V1.0~) BEGIN
        WRITE_LONG 0x2c4 eff_offset
        WRITE_LONG 0x2c8 (eff_count + accum_adj)
        PATCH_IF (knownspells_offset >= eff_offset) BEGIN
          WRITE_LONG 0x2a0 knownspells_offset + (accum_adj * efflength)
        END
        PATCH_IF (spellslots_offset >= eff_offset) BEGIN
          WRITE_LONG 0x2a8 spellslots_offset + (accum_adj * efflength)
        END
        PATCH_IF (memspells_offset >= eff_offset) BEGIN
          WRITE_LONG 0x2b0 memspells_offset + (accum_adj * efflength)
        END
        PATCH_IF (islots_offset >= eff_offset) BEGIN
          WRITE_LONG 0x2b8 islots_offset + (accum_adj * efflength)
        END
        PATCH_IF (itm_offset >= eff_offset) BEGIN
          WRITE_LONG 0x2bc itm_offset + (accum_adj * efflength)
        END
      END // bg2 cre
      PATCH_IF (~%creversion%~ STRING_EQUAL ~V9.0~) BEGIN
        WRITE_LONG 0x32c eff_offset
        WRITE_LONG 0x330 (eff_count + accum_adj)
        PATCH_IF (knownspells_offset >= eff_offset) BEGIN
          WRITE_LONG 0x308 knownspells_offset + (accum_adj * efflength)
        END
        PATCH_IF (spellslots_offset >= eff_offset) BEGIN
          WRITE_LONG 0x310 spellslots_offset + (accum_adj * efflength)
        END
        PATCH_IF (memspells_offset >= eff_offset) BEGIN
          WRITE_LONG 0x318 memspells_offset + (accum_adj * efflength)
        END
        PATCH_IF (islots_offset >= eff_offset) BEGIN
          WRITE_LONG 0x320 islots_offset + (accum_adj * efflength)
        END
        PATCH_IF (itm_offset >= eff_offset) BEGIN
          WRITE_LONG 0x324 itm_offset + (accum_adj * efflength)
        END
      END // iwd cre
    END // if armor && natural resistance
  END
  BUT_ONLY_IF_IT_CHANGES
END

